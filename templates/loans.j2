{% extends "main.j2" %}
{% block content %}

<h1>loans</h1>

<h2> {{message}} </h2>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for header in headers %}
            <th>{{ header }}</th>
            {% endfor %}
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for loan in loans %}
        <tr>
            <td>{{ loan.startDate }}</td>
            <td>{{ loan.dueDate }}</td>
            <td>{{ loan.resourceName }} </td>
            <td>{{ loan.firstName }}</td>
            <td>{{ loan.lastName }}</td>

            {# DELETE form #}
            <form id="delete_loan_form" action="/delete" method="POST">
                <input type="hidden" name="table" value="loans">
                <input type="hidden" name="id" value="{{ loan.loanID }}">
                <input type="hidden" name="name" value="{{ loan.firstName }} {{ loan.lastName }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}